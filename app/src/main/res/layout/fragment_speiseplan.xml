<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.xorg.gsapp.SpeiseplanFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/prevDay"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="prevDay" />

        <Button
            android:id="@+id/nextDay"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="nextDay" />

        <TextView
            android:id="@+id/curDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/prevDay"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/nextDay"
            android:layout_toRightOf="@+id/prevDay"
            android:layout_toStartOf="@+id/nextDay"
            android:gravity="center"
            android:text="CurrentDay"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <de.xorg.cardsuilib.views.CardUI
        android:id="@+id/cardsview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>


